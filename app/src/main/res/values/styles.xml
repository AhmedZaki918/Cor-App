<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Style for the labels -->
    <style name="Labels">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for sub labels -->
    <style name="SubLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Style for the EditText  -->
    <style name="EditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/custom_edit</item>
        <item name="android:drawableStart">@drawable/ic_attach_money_black_24dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">8dp</item>
    </style>


    <!-- Style for plus Button -->
    <style name="ButtonPlus">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/plus</item>
        <item name="android:background">@drawable/small_button</item>
    </style>


    <!-- Style for subtract Button -->
    <style name="ButtonSub">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/subtract</item>
        <item name="android:background">@drawable/small_button</item>
    </style>

    <!-- Style for final cost TextView -->
    <style name="FinalCostTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
